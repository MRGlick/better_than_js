float pi = 3.141592653;
int radius1 = 5;
int radius2 = 10;

float area1 = pi * radius1 * radius1;
float area2 = pi * radius2 * radius2;

print "Area of ", radius1, " inch pizza: ", area1, " in^2";
print "Area of ", radius2, " inch pizza: ", area2, " in^2";

print "That's ", area2 / area1, " times bigger!";
