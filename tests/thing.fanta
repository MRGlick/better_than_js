
float PI = 3.141592653;

float circle_area(float radius) return radius * radius * PI;

while (true) {

    float t;

    print "Enter input (0 to 8) for diameter 't': ";

    input t;

    float area = circle_area(t/2) + circle_area((8 - t)/2);

    print "Area: ", area, " units, or ", area / PI, "pi units";

}