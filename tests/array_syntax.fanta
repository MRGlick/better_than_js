

int[] arr = [0; 4]; // same as [0, 0, 0, 0]

for (int i = 0; i < arr.length; i += 1; ) {
    arr[i] = i * 3;
}

float[][] mat = [float; 3; 3;]; // shorthand for [float[]; 3;] + init for each row

for (int i = 0; i < mat.length; i += 1; ) {

    for (int j = 0; j < mat[i].length; j++) {

        mat[i][j] = i * 2.5 / j;
    }
}





