{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" }
  ],
  "surroundingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" }
  ],
  "onEnterRules": [
    {
      "beforeText": "\\s*\\{\\s*$",
      "action": {
        "indentAction": "IncreaseIndent"
      }
    },
    {
      "beforeText": "\\s*\\}\\s*$",
      "action": {
        "indentAction": "DecreaseIndent"
      }
    }
  ]
}
